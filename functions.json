          "name": "mode", 
          "type": "string",
          "optional": true
        },
        {
          "description": "Max tokens (1-4096, optional)",
          "name": "maxTokens",
          "type": "number", 
          "optional": true
        },
        {
          "description": "LLM alias (optional)",
          "name": "llmAlias",
          "type": "string",
          "optional": true
        }
